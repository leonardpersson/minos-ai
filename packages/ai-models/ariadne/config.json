{
    "model_version": "1.0.0",
    "model_description": "Ariadne AI Trading Model: Deep learning model for predicting cryptocurrency price movements and generating trading signals",
    "maintainer": "Minos-AI Team",
    "created_date": "2024-12-15",
    "last_updated": "2024-12-15",
    
    "// Model Architecture Configuration": "Settings for the neural network architecture",
    "architecture": "hybrid",
    "mode": "classification",
    "label_type": "binary",
    "sequence_length": 60,
    "prediction_horizon": 5,
    "n_features": 64,
    "n_targets": 1,
    "n_classes": 2,
    
    "// Layer Configuration": "Settings for neural network layers",
    "n_filters": [64, 128, 196],
    "kernel_sizes": [3, 5, 7],
    "lstm_units": 128,
    "dense_units": [128, 64],
    "dropout_rate": 0.3,
    "l1_regularization": 0.0001,
    "l2_regularization": 0.0001,
    "n_heads": 4,
    
    "// Training Configuration": "Settings for model training",
    "learning_rate": 0.001,
    "batch_size": 64,
    "epochs": 100,
    "optimizer": "adam",
    "loss": "binary_crossentropy",
    "early_stopping_patience": 10,
    "early_stopping_min_delta": 0.001,
    "reduce_lr_factor": 0.5,
    "reduce_lr_patience": 5,
    "random_seed": 42,
    "validation_split": 0.2,
    "class_weight": {"0": 1.0, "1": 1.5},
    
    "// Ensemble Configuration": "Settings for ensemble models",
    "use_ensemble": true,
    "ensemble_method": "bagging",
    "ensemble_size": 5,
    "ensemble_model_paths": [],
    
    "// Optional Components": "Optional model components to enable",
    "optional_components": ["attention", "uncertainty", "residual"],
    "attention_type": "self_attention",
    "uncertainty_method": "mc_dropout",
    "mc_samples": 30,
    
    "// Preprocessing Configuration": "Settings for data preprocessing",
    "preprocessor_dir": "./data",
    "output_dir": "./data",
    "feature_scaler": "standard",
    "label_scaler": "standard",
    "imputer": "mean",
    "max_missing_ratio": 0.3,
    "outlier_method": "zscore",
    "zscore_threshold": 3.0,
    "apply_dimension_reduction": false,
    "dimension_reduction_method": "pca",
    "pca_components": 0.95,
    "split_method": "time",
    "train_val_test_split": [0.7, 0.15, 0.15],
    "apply_data_augmentation": true,
    "augmentation_factor": 1.5,
    "augmentation_methods": ["jitter", "scaling", "time_warp", "magnitude_warp"],
    "jitter_noise_level": 0.01,
    
    "// Data Configuration": "Settings for input data",
    "ohlcv_columns": {
      "open": "open",
      "high": "high",
      "low": "low",
      "close": "close",
      "volume": "volume"
    },
    "datetime_column": "timestamp",
    "target_column": "close",
    "required_columns": ["open", "high", "low", "close", "volume"],
    "features_to_include": [],
    
    "// Technical Indicators": "Technical indicators to calculate",
    "technical_indicators": {
      "sma": {"windows": [10, 20, 50, 100, 200]},
      "ema": {"windows": [10, 20, 50, 100, 200]},
      "rsi": {"windows": [14, 21]},
      "macd": {"fast": 12, "slow": 26, "signal": 9},
      "bollinger_bands": {"window": 20, "num_std": 2},
      "atr": {"windows": [14]},
      "stochastic": {"k_period": 14, "d_period": 3, "slowing": 3},
      "adx": {"window": 14},
      "obv": {},
      "mfi": {"windows": [14]},
      "awesome_oscillator": {},
      "volatility": {"windows": [10, 20, 30]},
      "donchian_channel": {"windows": [20]},
      "price_channels": {"windows": [20]},
      "relative_returns": {"windows": [1, 5, 10, 20, 60]},
      "z_score": {"windows": [20, 50, 100]},
      "williams_r": {"windows": [14]},
      "volume_indicators": {"windows": [20]},
      "spread_indicators": {}
    },
    
    "// Market Microstructure Features": "Market microstructure features to calculate",
    "market_microstructure_features": {
      "volatility_measures": {"windows": [10, 20, 30]},
      "illiquidity_measures": {"windows": [20]},
      "price_impact": {"windows": [20]},
      "volume_weighted_volatility": {"windows": [20]},
      "tick_rule": {"windows": [20]},
      "market_efficiency": {"windows": [20]},
      "advanced_volatility": {"windows": [20]},
      "price_reversals": {"windows": [20]}
    },
    
    "// Inference Configuration": "Settings for model inference",
    "prediction_mode": "real_time",
    "signal_type": "binary",
    "confidence_threshold": 0.6,
    "buy_threshold": 0.7,
    "sell_threshold": 0.3,
    "class_mapping": {"0": -1, "1": 0, "2": 1},
    "max_prediction_history": 1000,
    "enable_drift_detection": true,
    "drift_detection_threshold": 0.5,
    "max_reference_samples": 1000,
    "prediction_timeout": 2.0,
    "num_parallel_threads": 4,
    "non_blocking_api": true,
    "model_refresh_interval": 86400,
    
    "// Deployment Configuration": "Settings for model deployment",
    "deployment_mode": "rest",
    "api_host": "0.0.0.0",
    "api_port": 5000,
    "api_prefix": "/api/v1",
    "enable_auth": true,
    "auto_load": true,
    
    "// Advanced Configuration": "Advanced settings for model behavior",
    "mixed_precision": false,
    "visible_gpus": [0],
    "inter_op_parallelism_threads": 0,
    "intra_op_parallelism_threads": 0,
    "verbosity": 1,
    
    "// Trading Simulation Configuration": "Settings for trading simulation",
    "initial_capital": 10000.0,
    "position_size": 0.1,
    "fee_rate": 0.001,
    "stop_loss": 0.02,
    "take_profit": 0.05,
    
    "// Metrics Server Configuration": "Settings for Prometheus metrics server",
    "metrics_server_port": 8000,
    "enable_metrics_server": true,
    
    "// Exchange Integration": "Settings for exchange API integration",
    "exchange_api_endpoint": "",
    "exchange_api_key": "",
    "exchange_api_secret": "",
    "trading_symbol": "BTC/USDT",
    
    "// Blockchain Integration": "Settings for blockchain integration",
    "blockchain_endpoint": "",
    "wallet_path": ""
  }